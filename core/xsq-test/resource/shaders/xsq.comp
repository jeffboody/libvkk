#version 450

layout (local_size_x=4, local_size_y=1, local_size_z=1) in;

layout(std430, set=0, binding=0) readonly buffer bufferIn
{
	float x[];
};

layout(std430, set=0, binding=1) writeonly buffer bufferOut
{
	float xx[];
};

void main()
{
	// compute xsq
	uint i = gl_GlobalInvocationID.x;
	xx[i]  = x[i]*x[i];
}
